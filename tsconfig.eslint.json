{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "__tests__/**/*", "**/*.test.ts"],
  "exclude": ["dist", "lib", "node_modules"]
}
