{
  "name": "openai-pr-reviewer",
  "version": "0.0.0",
  "private": true,
  "description": "OpenAI-based PR Reviewer and Summarizer.",
  "main": "lib/main.js",
  "scripts": {
    "build": "cp node_modules/@dqbd/tiktoken/tiktoken_bg.wasm dist/tiktoken_bg.wasm && tsc",
    "package": "ncc build --license licenses.txt",
    "act": "npm run build && npm run package && ./bin/act pull_request_target --secret-file .secrets",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test && npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stuhlmuller/ai-pr-reviewer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@anthropic-ai/sdk": "^0.71.2",
    "@dqbd/tiktoken": "^1.0.22",
    "@octokit/action": "^8.0.4",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "minimatch": "^10.1.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.1",
    "@eslint/eslintrc": "3.3.3",
    "@jest/globals": "30.2.0",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/node": "25.0.6",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.52.0",
    "@vercel/ncc": "0.38.4",
    "chatgpt": "5.2.5",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "eslint": "9.39.2",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.12.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.2.0",
    "js-yaml": "4.1.1",
    "prettier": "3.7.4",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  }
}
