{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "lib",
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
